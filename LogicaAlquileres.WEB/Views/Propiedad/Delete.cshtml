@model LogicaAlquileres.Managers.Entidades.Propiedad

@{
    ViewData["Title"] = "Eliminar Propiedad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Propiedad</h1>

<h3>¿Estás seguro de que deseas eliminar esta propiedad?</h3>
<div>
    <h4>Detalles de la Propiedad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Dirección:</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <dt class="col-sm-2">Estado:</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Precio:</dt>
        <dd class="col-sm-10">@Model.Precio</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.IdPropiedad" />
        <div>
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
