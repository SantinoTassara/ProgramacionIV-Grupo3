@model LogicaAlquileres.WEB.Models.PropiedadVM

@{
    ViewData["Title"] = "Editar Propiedad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Propiedad</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="model.IdPropiedad" /> 

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="model.Nombre"></label>
                <input asp-for="model.Nombre" class="form-control" />
                <span asp-validation-for="model.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="model.Direccion"></label>
                <input asp-for="model.Direccion" class="form-control" />
                <span asp-validation-for="model.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="model.Estado"></label>
                <select asp-for="model.Estado" class="form-control" asp-items="Model.ListaEstadosItem">
                    <option value="">Seleccione un estado</option>
                </select>
                <span asp-validation-for="model.Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="model.Precio"></label>
                <input asp-for="model.Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="model.Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
